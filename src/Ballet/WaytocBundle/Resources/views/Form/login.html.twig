{% extends 'BalletWaytocBundle:Layout:frame.html.twig' %}
{% block content %}
    <div class="col-sm-6 center">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="text-center">Sign in</h3>
                {% if error %}
                    <div class="alert alert-warning">{{ error.message()}}</div>
                {% endif %}
            </div>
            <div class="panel-body">
                <form action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <label class="control-label" for="username">Username:</label>
                        <input class="form-control" type="text" id="username" name="_username" value="{{ username }}" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="_password" />
                        <input type="hidden" name="_target_path" value="/waytoc" />
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-lg btn-primary text-uppercase" type="submit" name="login">login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}