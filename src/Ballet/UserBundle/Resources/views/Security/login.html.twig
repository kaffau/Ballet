{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block hwi_oauth_content %}
    <section class="col-lg-5 col-sm-12 center clearfix">
        <div class="col-lg-12 white-bg">
            <h3 class="text-center">Sign in with!</h3>
            {% if error %}
                <span>{{ error }}</span>
            {% endif %}
            {% for owner in hwi_oauth_resource_owners() %}
                <div class="form-group">
                    <a href="{{ hwi_oauth_login_url(owner) }}" class="btn btn-fb form-control relative radius4">{{ owner | trans({}, 'HWIOAuthBundle') }}
                        <i class="icon icon-fb"></i>
                    </a>
                </div>
                <div class="text-center form-group">or</div>
            {% endfor %}
        </div>
    </section>
{% endblock hwi_oauth_content %}

{% block fos_user_content %}
    <section class="col-lg-5 col-sm-12 center clearfix">
        <div class="col-lg-12 white-bg">
            <div class="form-group">
                <a class="btn btn-default form-control radius4" data-toggle="collapse" data-target="#login">
                    Sign in with email
                </a>
            </div>
            {% if error %}
                <div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div id="login" class="collapse">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{csrf_token}}" />
                    <div class="form-group">
                        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="{{'security.login.username'|trans}}"/>
                    </div>
                    <div class="form-group">
                        <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="{{'security.login.password'|trans}}" />
                    </div>
                    <div class="form-group">
                        <input type="submit" id="_submit" class="btn btn-primary form-control" name="_submit" value="{{'security.login.submit'|trans }}" />
                    </div>
                </form>
                <div class="form-group text-center">
                    <a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
                </div>
            </div>
        </div>
    </section>
{% endblock fos_user_content %}